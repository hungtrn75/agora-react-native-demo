<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/zalo"
  tools:context=".workspace.call.IncomingCallActivity">
  <ImageView
    android:layout_marginTop="46dp"
    android:id="@+id/logo"
    android:src="@drawable/zalo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="80dp"
    android:layout_height="wrap_content"/>
  <ImageView
    android:id="@+id/avatar"
    android:background="@drawable/shape_normal"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/logo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="150dp"
    android:layout_height="150dp"/>
  <TextView
    android:id="@+id/userName"
    android:text="Hung Tran"
    android:textSize="30dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/avatar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:fontFamily="@font/svn_gilroy_semi_bold"
    android:textColor="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
  <TextView
    android:id="@+id/callType"
    android:text="Zalo: Cuộc gọi thoại đến"
    android:textColor="@color/white"
    android:textSize="22sp"
    android:layout_marginTop="5dp"
    app:layout_constraintTop_toBottomOf="@+id/userName"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
  <ImageView
    android:id="@+id/imb_reject"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/reject"
    android:layout_marginBottom="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginStart="60dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintVertical_bias="0.75" />
  <TextView
    android:text="Từ chối"
    android:textColor="@color/white"
    android:fontFamily="@font/svn_gilroy_semi_bold"
    app:layout_constraintTop_toBottomOf="@+id/imb_reject"
    app:layout_constraintStart_toStartOf="@+id/imb_reject"
    app:layout_constraintEnd_toEndOf="@id/imb_reject"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <ImageView
    android:id="@+id/imb_accept"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginEnd="60dp"
    android:src="@drawable/accept"
    android:layout_marginBottom="60dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintVertical_bias="0.75" />
  <TextView
    android:text="Trả lời"
    android:textColor="@color/white"
    android:fontFamily="@font/svn_gilroy_semi_bold"
    app:layout_constraintTop_toBottomOf="@+id/imb_accept"
    app:layout_constraintStart_toStartOf="@+id/imb_accept"
    app:layout_constraintEnd_toEndOf="@id/imb_accept"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>